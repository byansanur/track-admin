<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.CreateAkunActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_arrow_back_white_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form users"
                android:layout_marginStart="35dp"
                android:textSize="22sp"
                android:textColor="#fff"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/namauser"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="Nama user"
                    android:maxLines="10"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="Username"
                    android:maxLines="10"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />
                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="Password"
                    android:maxLines="10"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal lahir"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/tglLahir"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="Tanggal lahir"
                    android:maxLines="10"
                    android:textSize="18sp"
                    android:focusable="false"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No identitas"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/noKtp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="No identitas (KTP/SIM)"
                    android:inputType="number"
                    android:maxLength="16"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No handphone"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/noHp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="No handphone"
                    android:maxLength="12"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No visa"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/visa"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="No visa"
                    android:maxLength="20"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No passpor"
                    android:textColor="#000"
                    android:textSize="18sp"
                    />

                <EditText
                    android:id="@+id/passpor"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:hint="No passpor"
                    android:maxLength="10"
                    android:textSize="18sp"
                    android:background="@android:color/transparent" />

